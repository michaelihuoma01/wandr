    "@genkit-ai/core": "^1.11.1",
    "@genkit-ai/googleai": "^1.11.1", 
    "@genkit-ai/firebase": "^1.11.1",
    "zod": "^3.23.8" 
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.3.0"
  },
  "private": true
